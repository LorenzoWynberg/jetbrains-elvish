<templateSet group="Elvish">
  <template name="fn" value="fn $NAME$ {|$PARAMS$|&#10;  $END$&#10;}" description="Function definition" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;name&quot;" alwaysStopAt="true" />
    <variable name="PARAMS" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="if" value="if $COND$ {&#10;  $END$&#10;}" description="If conditional" toReformat="false" toShortenFQNames="true">
    <variable name="COND" expression="" defaultValue="&quot;condition&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="ife" value="if $COND$ {&#10;  $THEN$&#10;} else {&#10;  $END$&#10;}" description="If-else conditional" toReformat="false" toShortenFQNames="true">
    <variable name="COND" expression="" defaultValue="&quot;condition&quot;" alwaysStopAt="true" />
    <variable name="THEN" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="for" value="for $VAR$ $CONTAINER$ {&#10;  $END$&#10;}" description="For loop over container" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="&quot;item&quot;" alwaysStopAt="true" />
    <variable name="CONTAINER" expression="" defaultValue="&quot;$items&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="while" value="while $COND$ {&#10;  $END$&#10;}" description="While loop" toReformat="false" toShortenFQNames="true">
    <variable name="COND" expression="" defaultValue="&quot;condition&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="try" value="try {&#10;  $CODE$&#10;} catch e {&#10;  $END$&#10;}" description="Try-catch block" toReformat="false" toShortenFQNames="true">
    <variable name="CODE" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="tryf" value="try {&#10;  $CODE$&#10;} finally {&#10;  $END$&#10;}" description="Try-finally block" toReformat="false" toShortenFQNames="true">
    <variable name="CODE" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <!-- Common Pattern Templates -->

  <template name="use" value="use $MODULE$" description="Import module (str, path, math, re, file, os)" toReformat="false" toShortenFQNames="true">
    <variable name="MODULE" expression="" defaultValue="&quot;str&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="var" value="var $NAME$ = $VALUE$" description="Variable declaration" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;name&quot;" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="set" value="set $NAME$ = $VALUE$" description="Variable assignment" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;name&quot;" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="each" value="each {|$VAR$|&#10;  $END$&#10;}" description="Iteration pattern with callback" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="&quot;item&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="peach" value="peach {|$VAR$|&#10;  $END$&#10;}" description="Parallel iteration pattern" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="&quot;item&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="lambda" value="{|$PARAMS$| $END$ }" description="Anonymous function (lambda)" toReformat="false" toShortenFQNames="true">
    <variable name="PARAMS" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="map" value="[&amp;$KEY$=$VALUE$ $END$]" description="Map literal with key-value pair" toReformat="false" toShortenFQNames="true">
    <variable name="KEY" expression="" defaultValue="&quot;key&quot;" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>

  <template name="list" value="[$ITEMS$]" description="List literal" toReformat="false" toShortenFQNames="true">
    <variable name="ITEMS" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="ELVISH" value="true" />
    </context>
  </template>
</templateSet>
